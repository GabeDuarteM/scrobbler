{
  "name": "scrobbler",
  "version": "0.1.0",
  "main": "index.js",
  "author":
    "Gabriel Duarte <gabrielqduarte@gmail.com> (https://github.com/GabrielDuarteM/)",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode production",
    "prebuild:dev": "rimraf dist",
    "build:dev": "webpack --mode development",
    "ci": "yarn lint && yarn test:cov && yarn build",
    "start": "yarn build:dev -w",
    "lint": "yarn tslint -p tsconfig.json -t code-frame",
    "lint:fix": "yarn lint --fix",
    "test:cov": "jest --coverage",
    "test": "jest --watch",
    "release": "semantic-release"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": ["./src/utils/testGlobals.ts"],
    "testRegex": "\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "collectCoverageFrom": ["src/**/*.ts"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/@types/"]
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "trakt.tv": "^7.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.69",
    "@types/copy-webpack-plugin": "^4.4.1",
    "@types/jest": "^23.1.4",
    "@types/lodash": "^4.14.107",
    "@types/source-map": "0.5.2",
    "@types/webpack": "^4.1.3",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^4.5.1",
    "cpx": "^1.5.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "jest": "^23.3.0",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.7",
    "semantic-release-chrome": "^1.0.1",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-consistent-codestyle": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8"
  }
}
