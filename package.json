{
  "name": "scrobbler",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Gabriel Duarte <gabrielqduarte@gmail.com> (https://github.com/GabrielDuarteM/)",
  "license": "MIT",
  "scripts": {
    "cz": "git-cz",
    "prebuild": "rimraf dist",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:ci": "yarn lint && yarn test:cov && yarn build",
    "start": "yarn build:dev -w",
    "lint": "yarn tslint -p tsconfig.json -t code-frame",
    "lint:fix": "yarn lint --fix",
    "test:cov": "jest --coverage",
    "test": "jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "./src/utils/testGlobals.ts"
    ],
    "testRegex": "\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/@types/"
    ]
  },
  "dependencies": {
    "@types/chrome": "^0.0.60",
    "@types/copy-webpack-plugin": "^4.4.0",
    "@types/jest": "^22.1.4",
    "@types/lodash": "^4.14.104",
    "@types/source-map": "0.5.2",
    "@types/webpack": "^3.8.8",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "jest": "^22.4.2",
    "lodash": "^4.17.5",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "trakt.tv": "^6.0.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-consistent-codestyle": "^1.11.1",
    "tslint-immutable": "^4.5.2",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  }
}
