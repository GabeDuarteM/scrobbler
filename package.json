{
  "name": "Scrobbler",
  "version": "0.1.0",
  "main": "index.js",
  "author":
    "Gabriel Duarte <gabrielqduarte@gmail.com> (https://github.com/GabrielDuarteM/)",
  "license": "MIT",
  "scripts": {
    "cz": "git-cz",
    "prebuild": "rimraf dist",
    "build": "webpack --env.production -p",
    "build:dev": "webpack --env.development",
    "build:ci": "yarn lint && yarn test:cov && yarn build",
    "start": "yarn build:dev -w",
    "lint": "yarn tslint -p tsconfig.json -t code-frame",
    "lint:fix": "yarn lint --fix",
    "test:cov": "jest --coverage",
    "test": "jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "collectCoverageFrom": ["src/**/*.ts"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/@types/"]
  },
  "dependencies": {
    "@types/chrome": "^0.0.59",
    "@types/copy-webpack-plugin": "^4.4.0",
    "@types/jest": "^22.1.3",
    "@types/source-map": "0.5.2",
    "@types/webpack": "^3.8.8",
    "@types/webpack-merge": "^4.1.2",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.4.2",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "fork-ts-checker-webpack-plugin": "^0.3.0",
    "jest": "^22.4.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "trakt.tv": "^6.0.2",
    "ts-jest": "^22.0.4",
    "ts-loader": "^3.5.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-consistent-codestyle": "^1.11.1",
    "tslint-immutable": "^4.5.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2",
    "webpack": "^3.11.0",
    "webpack-merge": "^4.1.2"
  }
}
