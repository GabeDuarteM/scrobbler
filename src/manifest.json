{
  "name": "Scrobbler",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Scrobbler",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "page_action/page_action.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "*://*.crunchyroll.com/*",
    "*://*.netflix.com/watch/*",
    "*://*.trakt.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["crunchyroll.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["netflix.js"],
      "run_at": "document_end"
    }
  ]
}
